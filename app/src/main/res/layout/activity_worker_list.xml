<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".WorkerListActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userRecyclerView"
        android:layout_width="407dp"
        android:layout_height="657dp"
        android:layout_marginTop="73dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/black2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addSlave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить Работника"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/black2"
        android:backgroundTint="@color/orange"
        app:layout_constraintBottom_toTopOf="@+id/userRecyclerView"
        app:layout_constraintEnd_toStartOf="@+id/removeSlave"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/removeSlave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Удалить Работника"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/userRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:textColor="@color/black2"
        android:backgroundTint="@color/orange"
        app:layout_constraintStart_toEndOf="@+id/addSlave"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>